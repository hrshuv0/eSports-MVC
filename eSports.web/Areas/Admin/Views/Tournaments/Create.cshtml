@using eSports.entities.ViewModels
@model TournamentVm

@{
    ViewData["Title"] = "Tournament";
}


<div class="container-fluid mt-5">

    <div class="">
        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <h1>Add Tournament</h1>
            </div>

            <div class="card-body">
                <form class="horizontal-form" asp-area="Admin" asp-controller="Tournaments" asp-action="Create" method="post" enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament!.Name"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <input asp-for="Tournament.Name" type="text" class="form-control" placeholder="Game Name">
                                    <span asp-validation-for="Tournament.Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament.TournamentCategory"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <select asp-for="Tournament.TournamentCategory" asp-items="Model.CategoryList" class="form-control">
                                        <option disabled selected>--Select Category--</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament!.StartTime"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <input asp-for="Tournament!.StartTime" class="form-control" placeholder="Game Name">
                                    <span asp-validation-for="Tournament!.StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament!.EndTime"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <input asp-for="Tournament!.EndTime" class="form-control" placeholder="Game Name">
                                    <span asp-validation-for="Tournament!.EndTime" class="text-danger"></span>
                                </div>
                            </div>

                        </div>


                        <div class="col-6">


                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament.Game"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <select asp-for="Tournament.GameId" asp-items="Model.GameList" class="form-control">
                                        <option disabled selected>--Select Category--</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament!.TotalMatch"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <input asp-for="Tournament!.TotalMatch" type="text" class="form-control" placeholder="Game Name">
                                    <span asp-validation-for="Tournament!.TotalMatch" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12 col-md-3 text-right">
                                    <label asp-for="Tournament.PrizePool"></label>
                                </div>

                                <div class="col-12 col-md-9">
                                    <select asp-for="Tournament.PrizeId" asp-items="Model.PrizeList" class="form-control">
                                        <option disabled selected>--Select Prize--</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                    </div>


                    <div class="form-footer pt-5 border-top row">
                        <div class="col-6  offset-1">
                            <button type="submit" class="btn btn-success btn-default w-25 mr-2 ml-5">Create</button>
                            <a class="btn btn-secondary w-25" asp-action="Index">Back to list</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>


    </div>

</div>