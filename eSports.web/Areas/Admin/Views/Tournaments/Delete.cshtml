@model Tournament

@{
    ViewData["Title"] = "Tournament";
}

<form method="post">

    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary">Delete Tournament - @Model.Name</h2>
                </div>

                <div class="col">
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Game!.Name"></label>
                        <input asp-for="Game!.Name" class="form-control"/>
                        <span asp-validation-for="Game!.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TotalMatch"></label>
                        <input asp-for="TotalMatch" class="form-control"/>
                        <span asp-validation-for="TotalMatch" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PrizePool"></label>
                        <input asp-for="PrizePool" class="form-control"/>
                        <span asp-validation-for="PrizePool" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label asp-for="StartTime"></label>
                        <input asp-for="StartTime" class="form-control"/>
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EndTime"></label>
                        <input asp-for="EndTime" class="form-control"/>
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TournamentCategory!.Name"></label>
                        <input asp-for="TournamentCategory!.Name" class="form-control"/>
                        <span asp-validation-for="TournamentCategory!.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Prize!.PrizeName"></label>
                        <input asp-for="Prize!.PrizeName" class="form-control"/>
                        <span asp-validation-for="Prize!.PrizeName" class="text-danger"></span>
                    </div>

                </div>


                <div class="col-12">
                    <button type="submit" class="btn btn-danger" asp-route-id="@Model.Id">Delete</button>
                    <a class="btn btn-secondary" asp-action="Index">Back to list</a>
                </div>

            </div>
        </div>

    </div>

</form>