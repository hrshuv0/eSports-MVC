@model IEnumerable<Tournament>?

@{
    ViewData["Title"] = "Dashboard";
}

<div>
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-10">
                    <h2>List</h2>
                </div>
                <div class="col-2">
                    <div>
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <table class="table table-bordered">
                    <thead>
                    <tr class="text-center">
                        <th>Name</th>
                        <th>Game</th>
                        <th>Category</th>
                        <th>Prize Pool</th>
                        <th>Action</th>
                        

                    </tr>
                    </thead>
                    <tbody>
                    @if (Model is not null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Game!.Name</td>
                                <td>@item.TournamentCategory!.Name</td>
                                <th>@item.PrizePool</th>
                                
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Tournaments" asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-info m-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-warning m-2">
                                            <i class="bi bi-trash-fill"></i> Details
                                        </a>
                                        <a asp-controller="Tournaments" asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-warning m-2">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <h1>No tournament available</h1>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>