@model IEnumerable<Tournament>

@{
    ViewData["Title"] = "Dashboard";
}

<div>
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-10">
                    <h2>List</h2>
                </div>
                <div class="col-2">
                    <div>
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>Name</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model is not null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <h1>No tournament available</h1>
                    }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>