@using eSports.entities.ViewModels
@model TournamentVm

@{
    ViewData["Title"] = "Tournament";
}

<form method="post">

    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary">Update Tournament</h2>
                </div>

                <div class="mb-3">
                    <label asp-for="Tournament!.Name"></label>
                    <input asp-for="Tournament!.Name" class="form-control"/>
                    <span asp-validation-for="Tournament!.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tournament!.GameId"></label>
                    <select asp-for="Tournament!.GameId" asp-items="Model.GameList" class="form-control">
                        <option disabled selected>--select game--</option>
                    </select>
                    <span asp-validation-for="Tournament!.GameId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tournament!.TotalMatch"></label>
                    <input asp-for="Tournament!.TotalMatch" class="form-control"/>
                    <span asp-validation-for="Tournament!.TotalMatch" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tournament!.TournamentCategoryId"></label>
                    <select asp-for="Tournament!.TournamentCategoryId" asp-items="Model.CategoryList" class="form-control">
                        <option disabled selected>--select game--</option>
                    </select>
                    <span asp-validation-for="Tournament!.TournamentCategoryId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-secondary" asp-action="Index">Back to list</a>
                </div>

            </div>
        </div>

    </div>

</form>