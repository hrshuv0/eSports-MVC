@model IEnumerable<Game>

@{
    ViewData["Title"] = "Game";
}

<div class="container p-3 mt-5" style="background-color: #f1f1f1">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Game List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Games" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New
            </a>

        </div>
    </div>
    <br/><br/>


    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr class="text-center">
            <th></th>
            <th>Name</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" style="width: 50px;height: 50px;"/>
                </td>
                <td>@item.Name</td>
                <td>@item.Category!.Name</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Games" asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-info m-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Games" asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-warning m-2">
                            <i class="bi bi-trash-fill"></i> Details
                        </a>
                        <a asp-controller="Games" asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-warning m-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>


</div>