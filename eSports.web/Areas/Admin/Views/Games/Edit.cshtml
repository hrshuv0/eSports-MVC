@using eSports.entities.ViewModels
@model GameVm

@{
    ViewData["Title"] = "Game";
}

<div class="container mt-5 col-lg-8">
    <div class="bg-gradient">
        <form method="post" enctype="multipart/form-data">
            <div hidden>
                <input asp-for="Game.Id"/>
                <input asp-for="Game.ImageUrl"/>

            </div>
            

            <div >
                <div class="mx-3 pt-2 row">
                    <div class="col-8">
                        <h2>Update Game</h2>
                        <p>Edit the Game content using the form below</p>
                    </div>
                    <div class="col-4 me-0 align-content-end">
                        <img class="mb-1" style="max-width:100%; max-height: 200px;" src="@Model.Game.ImageUrl"/>

                    </div>
                </div>

                <div class="mx-3 p-3" style="background-color: #1f2128">
                    <div class="form-group row">
                        <label class="col-4 col-form-label" asp-for="Game.Name"></label>
                        <div class="col-8">
                            <input asp-for="Game.Name" class="form-control"/>
                            <span asp-validation-for="Game.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mt-2">
                        <label class="col-4 col-form-label" asp-for="Game.ImageUrl"></label>
                        <div class="col-8">
                            <input type="file" name="file" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mt-2">
                        <label class="col-4 col-form-label" asp-for="Game.CategoryId"></label>
                        <div class="col-8">
                            <select asp-for="Game.CategoryId" asp-items="Model.CategoryList" class="form-select">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Game.CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mt-2">
                        <label class="col-4 col-form-label" asp-for="Game.Description"></label>
                        <div class="col-8">
                            <input asp-for="Game.Description" class="form-control"/>
                        </div>
                    </div>

                </div>

                <div class="ms-3 pt-3 pb-3 row">
                    <button type="submit" class="btn btn-success" style="width: 48%">Update</button>
                    <a class="btn btn-secondary ms-2" style="width: 48%" asp-action="Index">Back to list</a>
                </div>

                @* <div class="ms-3 pt-3 pb-3 row"> *@
                @*     <button type="submit" class="btn btn-success" style="width: 48%">Create</button> *@
                @*     <a class="btn btn-secondary ms-2" style="width: 48%" asp-action="Index">Back to list</a> *@
                @* </div> *@


            </div>

        </form>
    </div>

</div>