@model Game

@{
    ViewData["Title"] = "Game";
}

<div class="container mt-5 col-lg-8">
    <div class="bg-gradient">
        <form method="post">
            <div >
                <div class="ms-3 pt-2">
                    <h2>Details </h2>
                    <p>Details of the Game - @Model.Name</p>
                </div>

                <div class="mx-3 p-3" style="background-color: #1f2128">
                    <div class="form-group row">
                        <label class="col-4 col-form-label" asp-for="Name"></label>
                        <div class="col-8">
                            <input disabled asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mt-2">
                        <label class="col-4 col-form-label" asp-for="CategoryId"></label>
                        <div class="col-8">
                            <input disabled asp-for="Category!.Name" class="form-control"/>
                            <span asp-validation-for="Category!.Name" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="ms-3 pt-3 pb-3 row">
                    <a class="btn btn-secondary ms-2" style="width: 48%" asp-action="Index">Back to list</a>
                </div>

                @* <div class="ms-3 pt-3 pb-3 row"> *@
                @*     <button type="submit" class="btn btn-success" style="width: 48%">Create</button> *@
                @*     <a class="btn btn-secondary ms-2" style="width: 48%" asp-action="Index">Back to list</a> *@
                @* </div> *@


            </div>

        </form>
    </div>

</div>