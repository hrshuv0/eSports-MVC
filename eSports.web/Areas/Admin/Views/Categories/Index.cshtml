@model IEnumerable<Category>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Category List</h2>

<div class="row">
    <div class="col-10">
        <h2>List</h2>
    </div>
    <div class="col-2">
        <div>
            <a class="btn btn-primary" asp-action="Create">Create</a>
        </div>
    </div>
</div>

<div>
    <table class="table table-bordered">
        <thead>
        <th>Name</th>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
            </tr>
        }
        </tbody>
    </table>
</div>