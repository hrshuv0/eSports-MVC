@model IEnumerable<TournamentCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 mt-5  mt-5" style="background-color: #1f2128" >
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info font-monospace">Tournament Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TournamentCategories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New
            </a>

        </div>
    </div>
    <br/><br/>


    <table class="table table-bordered table-striped table-dark" style="width: 100%">
        <thead>
        <tr>
            <th>Category Name</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="40%">@category.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="TournamentCategories" asp-action="Edit" asp-route-id="@category.Id"
                           class="btn btn-info m-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="TournamentCategories" asp-action="Delete" asp-route-id="@category.Id"
                           class="btn btn-warning m-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>