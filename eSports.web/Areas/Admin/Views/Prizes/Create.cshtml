@model Prize

@{
    ViewData["Title"] = "Prize";
}

<div class="container mt-5 col-lg-8">
    <div class="bg-gradient">
        <form method="post">

            <div >
                <div class="ms-3 pt-2">
                    <h2>Add Prize</h2>
                    <p>Add new prize content using the form below</p>
                </div>

                <div class="mx-3 p-3" style="background-color: #1f2128">
                    <div class="row form-group">
                        <label class="col-2 col-form-label" asp-for="PrizeName"></label>
                        <div class="col-10">
                            <input asp-for="PrizeName" class="form-control"/>
                            <span asp-validation-for="PrizeName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row mt-2">
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PlaceName"></label>
                                <div class="col-8">
                                    <input asp-for="PlaceName" class="form-control"/>
                                    <span asp-validation-for="PlaceName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PrizeAmount"></label>
                                <div class="col-8">
                                    <input asp-for="PrizeAmount" class="form-control"/>
                                    <span asp-validation-for="PrizeAmount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row  mt-2">
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PlaceName2"></label>
                                <div class="col-8">
                                    <input asp-for="PlaceName2" class="form-control"/>
                                    <span asp-validation-for="PlaceName2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PrizeAmount2"></label>
                                <div class="col-8">
                                    <input asp-for="PrizeAmount2" class="form-control"/>
                                    <span asp-validation-for="PrizeAmount2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row  mt-2">
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PlaceName3"></label>
                                <div class="col-8">
                                    <input asp-for="PlaceName3" class="form-control"/>
                                    <span asp-validation-for="PlaceName3" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PrizeAmount3"></label>
                                <div class="col-8">
                                    <input asp-for="PrizeAmount3" class="form-control"/>
                                    <span asp-validation-for="PrizeAmount3" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row  mt-2">
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label">Place Name</label>
                                <div class="col-8">
                                    <input disabled value="4th to 10th" class="form-control"/>
                                    <span asp-validation-for="PlaceName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <label class="col-4 col-form-label" asp-for="PrizeAmount4To10"></label>
                                <div class="col-8">
                                    <input asp-for="PrizeAmount4To10" class="form-control"/>
                                    <span asp-validation-for="PrizeAmount4To10" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                    
                </div>

                <div class="ms-3 pt-3 pb-3 row">
                    <button type="submit" class="btn btn-success" style="width: 48%">Create</button>
                    <a class="btn btn-secondary ms-2" style="width: 48%" asp-action="Index">Back to list</a>
                </div>


            </div>

        </form>
    </div>

</div>