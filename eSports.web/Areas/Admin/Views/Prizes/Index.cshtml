@model IEnumerable<Prize>

@{
    ViewData["Title"] = "Index";
}


<div class=" mt-5 container">
    <div class="card card-default">
        <div class="p-3 card-header-border-bottom">
            <div class="row">
                <div class="col-8">
                    <h1>Tournaments</h1>
                </div>
                <div class="col-4 d-flex justify-content-end ">
                    <a asp-area="Admin" asp-controller="Prizes" asp-action="Create" class="btn btn-success">Create</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            
            <table class="table table-hover ">
                <thead>
                <tr class="text-center">
                    <th scope="col">Name</th>
                    <th scope="col">Winner</th>
                    <th scope="col">Runners up</th>
                    <th scope="col">Second Runners up</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>

                <tbody>

                @foreach (var prize in Model!)
                {
                    <tr>
                        <td scope="row">@prize.PrizeName</td>
                        <td>@prize.PlaceName</td>
                        <td>@prize.PrizeAmount2</td>
                        <td>@prize.PrizeAmount3</td>
                        <td class="text-center">
                            <div class="w-75 btn-group text-center" role="group">
                                <a asp-controller="Tournaments" asp-action="Edit" asp-route-id="@prize.Id"
                                   class="btn-sm btn-secondary m-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@prize.Id"
                                   class="btn-sm btn-info m-2">
                                    <i class="bi bi-trash-fill"></i> Details
                                </a>
                                <a asp-controller="Tournaments" asp-action="Delete" asp-route-id="@prize.Id"
                                   class="btn-sm btn-danger m-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }





                </tbody>
            </table>
        </div>
    </div>
</div>