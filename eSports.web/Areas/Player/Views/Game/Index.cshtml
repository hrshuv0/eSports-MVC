@model IList<Game>?

@{
    ViewBag.Title = "title";
}

<h2>player game test</h2>


<div class="row">
    @foreach (var game in Model)
    {
        <div class="col-md-6 col-xl-4">
            <div class="card mb-3">
                <a asp-area="Player" asp-controller="Game" asp-action="Details" asp-route-id="@game.Id">
                    <img class="card-img-top" src="~/theme/sneat/assets/img/elements/18.jpg" alt="Card image cap"/>
                </a>

                <div class="card-body">
                    <a asp-area="Player" asp-controller="Game" asp-action="Details" asp-route-id="@game.Id">
                        <h5 class="card-title">@game.Name</h5>
                    </a>

                    <p class="card-text">
                        This is a wider card with supporting text below as a natural lead-in to additional content. This
                        content is a little bit longer.
                    </p>
                    <p class="card-text">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </p>
                </div>
            </div>
        </div>
    }
</div>